extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.upload}`, method="post",enctype="multipart/form-data")
            label(for="video") 동영상
            input(type="file",id="video",name="videoFile",required=true, accept="video/*")
            input(type="text",name="title",placeholder="제목",required=true)
            textarea(name="description",placeholder="설명",required=true)
            input(type="submit",values="Upload Video")
            

        