mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`,width="600")
        .videoPlayer__controls
            .videoPlayer__col
                span#jsVolumeBtn
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00 
                    |/ 
                    span#totalTime 00:00:00
                input.videoPlayer__volume#jsVolume(type="range",min="0",max="1",step="0.1",value="0")
            .videoPlayer__col
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__col
                span#jsFullScreen
                    i.fas.fa-expand
