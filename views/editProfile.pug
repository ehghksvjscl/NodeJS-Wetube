extends layouts/main

block content
    .form-container
        form(action=`/users${routes.editProfile}`, method="post",enctype="multipart/form-data")
            .fileUpload
                label(for="avatar") 사진
                input(type="file",id="avatar",name="avatar",accept="image/*")
            input(type="text",name="name",placeholder="이름",value=loggedUser.name)
            input(type="text",name="email",placeholder="이메일",value=loggedUser.email)
            input(type="submit",values="Upadte Profile")
